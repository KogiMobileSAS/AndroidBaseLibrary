<resources>

    <style name="AppTheme" parent="Theme.MyTheme" />

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="MagentaButtonStyle" parent="@style/ButtonsStyle">
        <item name="android:background">@drawable/selector_button_magenta</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/default_large_size</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="SectionTitleStyle" parent="@style/MediumTextStyle">
        <item name="android:layout_margin">@dimen/default_medium_size</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelTitleStyle" parent="@style/SmallTextStyle">
        <item name="android:layout_margin">@dimen/default_medium_size</item>
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>
